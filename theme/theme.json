{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 3,
	"settings": {
		"color": {
			"palette": [
				{
					"slug": "background",
					"color": "#ffffff",
					"name": "Background"
				},
				{
					"slug": "foreground",
					"color": "#404040",
					"name": "Foreground"
				},
				{
					"slug": "primary",
					"color": "#D90429",
					"name": "Primary"
				},
				{
					"slug": "secondary",
					"color": "#FFBA08",
					"name": "Secondary"
				},
				{
					"slug": "tertiary",
					"color": "#0369a1",
					"name": "Tertiary"
				}
			]
		},
		"spacing": {
			"blockGap": true,
			"contentGap": true,
			"padding": true,
			"margin": true,
			"units": [
				"px",
				"em",
				"rem",
				"vh",
				"vw",
				"%"
			],
            "spacingSizes": [
                {
                    "name": "Small",
                    "slug": "40",
                    "size": "1rem"
                },
                {
                    "name": "Medium",
                    "slug": "50",
                    "size": "1.5rem"
                },
                {
                    "name": "Large",
                    "slug": "60",
                    "size": "2rem"
                }
            ]
		},
		"typography": {
			"lineHeight": true
		},
		"border": {
			"width": true,
			"radius": true,
			"style": true
		},

		"layout": {
			"contentSize": "768px",
			"wideSize": "1170px"
		}
	}
}