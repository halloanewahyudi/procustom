{
	"$schema": "https://schemas.wp.org/trunk/theme.json",
	"version": 2,
	"settings": {
		"color": {
			"palette": [
				{
					"slug": "background",
					"color": "#ffffff",
					"name": "Background"
				},
				{
					"slug": "foreground",
					"color": "#404040",
					"name": "Foreground"
				},
				{
					"slug": "primary",
					"color": "#D90429",
					"name": "Primary"
				},
				{
					"slug": "secondary",
					"color": "#FFBA08",
					"name": "Secondary"
				},
				{
					"slug": "tertiary",
					"color": "#0369a1",
					"name": "Tertiary"
				}
			]
		},
		"spacing": {
			"blockGap": null,
			"contentGap": null,
			"padding": true,
			"margin": true,
			"units": [
				"px",
				"em",
				"rem",
				"vh",
				"vw",
				"%"
			],
			"spacingScale": {
				"extraSmall": "1rem",
				"small": "2rem",
				"medium": "3rem",
				"midlarge": "4rem",
				"large": "5rem",
				"xlarge": "6rem",
				"xxlarge": "7rem"
			}
		},
		"border": {
			"width": true,
			"radius": true,
			"style": true
		},

		"layout": {
			"contentSize": "768px",
			"wideSize": "1170px"
		}
	}
}